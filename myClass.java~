import java.util.ArrayList;
import java.util.Iterator;
public class myClass{
	//Can shrink and/or collapse dinamically
	public static void main(String[]args){
		ArrayList<Integer> myArrayList = new ArrayList<Integer>(4); //declaration
		myArraylist.add(20);	//Adds arguments to first index position
		myArraylist.add(30);
		myArraylist.add(40);
		myArraylist.add(50);
		myArraylist.add(60);
		myArraylist.add(70);
		//Access all elements of the Arraylist
		for(int num : myArrayList){
			System.out.println(num);
		}
		//Get the size of the ArrayList
		System.out.println("Size of ArrayList is: " + myArrayList.size());
		System.out.println("-----Removing certain Elements of Arraylist-----");
		myArrayList.remove(2);	//Removes Element 2 from ArrayList
		myArrayList.remove(3);	//Removes Element 3 ""     ""
		//Access all elements of the Arraylist
		for(int num : myArrayList){
			System.out.println(num);
		}

		myArrayList.clear();	//Deletes al elements of ArrayList
		System.out.println("-----Deleteing All Elements of Arraylist-----");
		//Access all elements of the Arraylist
		for(int num : myArrayList){
			System.out.println(num);
		}
		System.out.println("-----Changing certain Elements of Arraylist-----");
		myArraylist.set(0, 1000);
		//Access all elements of the Arraylist
		for(int num : myArrayList){
			System.out.println(num);
		}
		
	}
}
